{
    "css-keyword": {
        "type": "boolean",
        "additionalProperties": false
    },

    "css-percentage": {
        "type": "object",
        "properties": { "value": { "type": "number" }, "unit": { "enum": ["%"] } },
        "additionalProperties": false
    },

    "css-absolute-length-unit": {
        "enum": ["px", "cm", "mm", "q", "in", "pt", "pc"]
    },

    "css-relative-length-unit": {
        "enum": ["em", "ex", "ch", "rem", "vw", "vh", "vmin", "vmax"]
    },

    "css-length": {
        "type": "object",
        "properties": {
            "unit": {
                "oneOf": [
                    { "$ref": "css-absolute-length-unit" },
                    { "$ref": "css-relative-length-unit" }
                ]
            },
            "value": { "type": "number" }
        },
        "required": ["unit", "value"],
        "additionalProperties": false
    },

    "css-length-or-percentage": {
        "oneOf": [
            { "$ref": "css-length" },
            { "$ref": "css-percentage" }
        ]
    },

    "css-byte": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
    },

    "css-color": {
        "type": "object",
        "properties": {
            "red": { "$ref": "css-byte" },
            "green": { "$ref": "css-byte" },
            "blue": { "$ref": "css-byte" },
            "alpha": { "type": "number", "minimum": 0, "maximum": 1 }
        },
        "required": ["red", "green", "blue", "alpha"],
        "additionalProperties": false
    },

    "css-box-shadow": {
        "type": "array",
        "items": {
            "properties": {
                "inset": { "$ref": "css-keyword" },
                "offsetX": { "$ref": "css-length" },
                "offsetY": { "$ref": "css-length" },
                "blurRadius": { "$ref": "css-length" },
                "spreadRadius": { "$ref": "css-length" },
                "color": { "$ref": "css-color" }
            },
            "required": ["inset", "offsetX", "offsetY", "blurRadius", "spreadRadius", "color"],
            "additionalProperties": false
        },
        "minItems": 1
    },

    "css-border-radius": {
        "type": "object",
        "properties": {
            "topLeft": { "$ref": "css-length-or-percentage" },
            "topRight": { "$ref": "css-length-or-percentage" },
            "bottomLeft": { "$ref": "css-length-or-percentage" },
            "bottomRight": { "$ref": "css-length-or-percentage" }
        },
        "required": [
            "topLeft",
            "topRight",
            "bottomLeft",
            "bottomRight"
        ],
        "additionalProperties": false
    },

    "css-br-width": {
        "oneOf": [
            { "$ref": "css-length" }
        ]
    },

    "css-border-width": {
        "type": "object",
        "properties": {
            "top": { "$ref": "css-br-width" },
            "right": { "$ref": "css-br-width" },
            "bottom": { "$ref": "css-br-width" },
            "left": { "$ref": "css-br-width" }
        },
        "required": ["top", "right", "bottom", "left"],
        "additionalProperties": false
    },

    "css-br-style": {
        "enum": [ "none", "hidden", "dotted", "dashed", "solid", "double", "groove", "ridge", "inset", "outset"]
    },

    "css-border-style": {
        "type": "object",
        "properties": {
            "top": { "$ref": "css-br-style" },
            "right": { "$ref": "css-br-style" },
            "bottom": { "$ref": "css-br-style" },
            "left": { "$ref": "css-br-style" }
        },
        "required": ["top", "right", "bottom", "left"],
        "additionalProperties": false
    },

    "css-border-color": {
        "type": "object",
        "properties": {
            "top": { "$ref": "css-color" },
            "right": { "$ref": "css-color" },
            "bottom": { "$ref": "css-color" },
            "left": { "$ref": "css-color" }
        },
        "required": ["top", "right", "bottom", "left"],
        "additionalProperties": false
    },

    "css-border": {
        "type": "object",
        "properties": {
            "width": { "$ref": "css-border-width" },
            "style": { "$ref": "css-border-style" },
            "color": { "$ref": "css-border-color" }
        },
        "required": ["width", "style", "color"],
        "additionalProperties": false
    },

    "cssBorder": { "$ref": "css-border" },
    "cssBorderRadius": { "$ref": "css-border-radius" },
    "cssBoxShadow": { "$ref": "css-box-shadow" }
}
