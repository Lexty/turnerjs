<views descriptor="descriptor.json" xmlns="http://dev.wix.com/wix-apps/views-schema.xsd">

    <view for-type="Section" name="editorForm">
        <vbox css="width:100%;">
            <hbox layout="spacerAfter:10;">
                <vbox layout="width:200; spacerAfter:10;">
                    <label id="label" value="@VIEW_PHOTO@" />
                    <imageselector data="image" layout="margin:0 20px 0 0; width:200; height:120;" />
                </vbox>
                <vbox layout="box-flex:1;">
                    <label id="label" value="@VIEW_TITLE@" />
                    <textinput data="title" placeholder="@SECTION_TITLE_DEFAULT@" />
                </vbox>
            </hbox>
            <label id="label" value="@VIEW_DESCRIPTION@" />
            <textinput data="description" placeholder="@SECTION_DESC_DEFAULT@" skin="wixapps.integration.skins.TextAreaSkin" layout="height:135" />
        </vbox>
    </view>

    <view for-type="Item" name="editorForm">
        <vbox css="width:100%;">
            <hbox layout="spacerAfter:10;">
                <vbox layout="width:200; spacerAfter:10;">
                    <label id="label" value="@VIEW_PHOTO@" />
                    <imageselector data="image" layout="margin:0 20px 0 0; width:200; height:120;" />
                </vbox>
                <vbox layout="box-flex:1;">
                    <label id="label" value="@VIEW_TITLE@" />
                    <textinput data="title" placeholder="@DISH_TITLE_DEFAULT@" />
                    <label id="label" value="@VIEW_PRICE@" />
                    <textinput data="price" placeholder="@DISH_PRICE_DEFAULT@" />
                </vbox>
            </hbox>
            <label id="label" value="@VIEW_DESCRIPTION@" />
            <textinput data="description" placeholder="@DISH_DESC_DEFAULT@" skin="wixapps.integration.skins.TextAreaSkin" layout="height:135" />
        </vbox>
    </view>

    <!-- ##################### error handling ####################### -->

    <view for-type="Error" name="ErrorInEditor">
        <switchbox data="code">
            <case name="-1021">
                <vbox css="background-color:red" box-align="center">
                    <image value="{_type:'wix:Image',src:'images/warning-icon.png',width:256,height:256}" layout="spacerBefore:30;spacerAfter:10;width:64;height:64" isStyleEditable="false"/>
                    <label value="@ERROR_ITEM_NOT_FOUND_TITLE@" style="Heading M" color="#FFFFFF" layout="spacerAfter:10" isStyleEditable="false"/>
                    <label value="@ERROR_ITEM_NOT_FOUND_DESCRIPTION@" style="Body M" color="#FFFFFF" layout="spacerAfter:10" isStyleEditable="false"/>
                    <label value="@ERROR_ITEM_NOT_FOUND_DISCLAIMER@" style="Body XS" color="#FFFFFF" italic="true" layout="spacerAfter:30" isStyleEditable="false"/>
                </vbox>
            </case>
            <default>
                <label value="@ERROR_MESSAGE_IN_EDITOR@" isStyleEditable="false"/>
            </default>
        </switchbox>
    </view>

    <view for-type="Error" name="ErrorInPublished">
        <switchbox data="code">
            <case name="-1021"></case>
            <default>
                <label value="@ERROR_MESSAGE_IN_PUBLISHED@" isStyleEditable="false"/>
            </default>
        </switchbox>
    </view>
</views>
