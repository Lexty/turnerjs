    <!--

    There date formattings will not be taken from the translation resources but shown as is
    (our date library doesn't know how to say "Jan" or "Thursday" in languages other than English - yet".

    "Customize_News_DATE_COMBO1": "23 Jan 2017",
    "Customize_News_DATE_COMBO2": "23-Jan-2017",
    "Customize_News_DATE_COMBO3": "January 23, 2017",
    "Customize_News_DATE_COMBO4": "Sunday, January 23, 2017",
    "Customize_News_DATE_COMBO5": "23 January 2017",
    "Customize_News_DATE_COMBO6": "23-January-2017",
    -->

    <view for-type="wix:Date" name="NewsDate1">
        <date id="date" data="this" format="d mmm yyyy"/>
        <customizations>
            <combobox fieldId="date" key="format" label="@Customize_News_DATE_FORMAT@" priority="99" format="*">
                <option label="23 Jan 2017" value="d mmm yyyy"/>
                <option label="23-Jan-2017" value="d-mmm-yyyy"/>
                <option label="January 23, 2017" value="longDate"/>
                <option label="Sunday, January 23, 2017" value="fullDate"/>
                <option label="23 January 2017" value="d mmmm yyyy"/>
                <option label="23-January-2017" value="d-mmmm-yyyy"/>
                <option label="1/23/2017" value="m/d/yyyy"/>
                <option label="01/23/2017" value="mm/dd/yyyy"/>
            </combobox>
        </customizations>
    </view>

