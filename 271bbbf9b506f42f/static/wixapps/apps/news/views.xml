    <!-- ##################### editorSummary ####################### -->

    <view for-type="ItemList" name="editorSummary">
        <vbox css="height:54">
            <label id="summaryTitle" data="title" singleLine="true" layout="spacerBefore:18;spacerAfter:19" postfix="&lt;span class='typeName'&gt; | @EditorSummary_News_Section@&lt;/span&gt;"/>
        </vbox>
    </view>

    <view for-type="Item" name="editorSummary">
        <hbox css="height:54">
            <hbox layout="box-flex:1; spacerAfter:200;">
                <vbox layout="spacer:10">
                    <image data="image" layout="spacer:*;width:50;height:50"/>
                </vbox>
                <vbox layout="box-flex:1">
                    <unstyledlabel id="summaryTitle" data="title" singleLine="true" layout="spacerBefore:3;spacerAfter:3"
                                   postfix="&lt;span class='typeName'&gt; | @EditorSummary_News_item@&lt;/span&gt;"/>
                    <unstyledlabel id="summaryDescription" data="content" singleLine="true" layout="spacerAfter:9"/>
                </vbox>
            </hbox>
        </hbox>

    </view>

    <!-- ##################### editorForm ####################### -->

    <view for-type="ItemList" name="editorForm">
        <vbox css="width:100%;">
            <label id="label" value="@EditorForm_News_Title@"/>
            <textinput data="title" layout="spacerAfter:150" placeholder="@EditorForm_News_Title_Placeholder@"/>
        </vbox>
    </view>

    <view for-type="Item" name="editorForm">
        <vbox css="width:518">
            <label id="label" value="@EditorForm_News_Item_Title@"/>
            <textinput data="title" layout="spacerAfter:5" placeholder="@EditorForm_News_Item_Title_Placeholder@"/>
            <hbox layout="spacerAfter:5">
                <vbox>
                    <label id="label" value="@EditorForm_News_Item_Image@"/>
                    <imageselector data="image" layout="width:200;height:120" defaultImage="{ '_type': 'wix:Image', 'title': 'Default image', 'src': '2f7b76_f3e0b18a805017bb5c34c633f3fd93bc.png', 'width': 1280, 'height': 960 }"/>
                </vbox>
                <vbox layout="spacerBefore:30;box-flex:1">
                    <label id="label" value="@EditorForm_News_Item_Date_Created@"/>
                    <dateselector data="date" layout="spacerAfter:*;spacerBefore:6" allowEmpty="false"/>
                    <label id="label" value="@EditorForm_News_Item_Source@"/>
                    <hbox>
                        <textinput data="newsSource" layout="box-flex:1;spacerAfter:5" placeholder="@EditorForm_News_Item_Source_Description@"/>
                        <vbox>
                            <linkselector data="newsSourceLink" layout="spacer:*"/>
                        </vbox>
                    </hbox>
                </vbox>
            </hbox>
            <label id="label" value="@EditorForm_News_Item_Description@"/>
            <richtextinput data="content" height="240" css="width:512"/>
        </vbox>
    </view>

    <!-- ##################### error handling ####################### -->

    <view for-type="Error" name="ErrorInEditor">
        <switchbox data="code">
            <case name="-1021">
                <vbox css="background-color:red" box-align="center">
                    <image value="{_type:'wix:Image',src:'images/warning-icon.png',width:256,height:256}" layout="spacerBefore:30;spacerAfter:10;width:64;height:64" isStyleEditable="false"/>
                    <label value="@ERROR_ITEM_NOT_FOUND_TITLE@" style="Heading M" color="#FFFFFF" layout="spacerAfter:10" isStyleEditable="false"/>
                    <label value="@ERROR_ITEM_NOT_FOUND_DESCRIPTION@" style="Body M" color="#FFFFFF" layout="spacerAfter:10" isStyleEditable="false"/>
                    <label value="@ERROR_ITEM_NOT_FOUND_DISCLAIMER@" style="Body XS" color="#FFFFFF" italic="true" layout="spacerAfter:30" isStyleEditable="false"/>
                </vbox>
            </case>
            <default>
                <label value="@ERROR_MESSAGE_IN_EDITOR@" isStyleEditable="false"/>
            </default>
        </switchbox>
    </view>

    <view for-type="Error" name="ErrorInPublished">
        <switchbox data="code">
            <case name="-1021"></case>
            <default>
                <label value="@ERROR_MESSAGE_IN_PUBLISHED@" isStyleEditable="false"/>
            </default>
        </switchbox>
    </view>

</views>
