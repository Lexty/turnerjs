<views descriptor="descriptor.json" xmlns="views-schema.xsd">

    <!-- Text: Default layout -->
    <view for-type="ProductBundle" name="Default_DefTxtLayout|SimpleClean_DefTxtLayout|Polaroid_DefTxtLayout" vars="outOfStockMsg:'@ECOM_GALLERY_OUT_OF_STOCK_TEXT@'">
        <switchbox data="$text-alignment">
            <case name="left">
                <vbox>
                    <clippedparagraph2 pack="top" id="outOfStockTitle" value="{if(String.isEmpty($outOfStockMsg),'@ECOM_GALLERY_OUT_OF_STOCK_TEXT@',$outOfStockMsg)}" max-chars="150"
                                      layout="text-align:left" hidden="{not(and($hover, outOfStock, $expOutOfStockOpen))}" cssClass="txtHoverColorOutOfStock"/>
                    <clippedparagraph2 pack="top" id="desc" data="title" max-chars="150"
                                      layout="text-align:left"  hidden="{and(outOfStock, $expOutOfStockOpen, $hover)}" cssClass="txtHoverColor"/>
                    <switchbox id="retailPriceSwitch" data="retailPrice" cssClass="txtHoverColor">
                        <case name="&lt;br/&gt;">
                            <hbox css="text-align:left">
                                <label id="text" data="price" cssClass="price"/>
                            </hbox>
                        </case>
                        <default>
                            <hbox>
                                <hbox layout="spacerBefore:0;spacerAfter:*;text-align:left">
                                    <label data="retailPrice" lineThrough="true" cssClass="retail" />
                                    <spacer size="5" />
                                    <label data="price" cssClass="salePrice" />
                                </hbox>
                            </hbox>
                        </default>
                    </switchbox>
                </vbox>
            </case>
            <case name="center">
                <vbox>
                    <clippedparagraph2 pack="top" id="outOfStockTitle" value="{if(String.isEmpty($outOfStockMsg),'@ECOM_GALLERY_OUT_OF_STOCK_TEXT@',$outOfStockMsg)}" max-chars="150"
                                      layout="text-align:center" hidden="{not(and($hover, outOfStock, $expOutOfStockOpen))}" cssClass="txtHoverColorOutOfStock"/>
                    <clippedparagraph2 pack="top" id="desc" data="title" max-chars="150"
                                      layout="text-align:center"  hidden="{and(outOfStock, $expOutOfStockOpen, $hover)}" cssClass="txtHoverColor"/>
                    <switchbox id="retailPriceSwitch" data="retailPrice" cssClass="txtHoverColor">
                        <case name="&lt;br/&gt;">
                            <hbox css="text-align:center">
                                <label id="text" data="price" cssClass="price" layout="spacerBefore:*;spacerAfter:*;" />
                            </hbox>
                        </case>
                        <default>
                            <hbox>
                                <hbox layout="spacerBefore:*;spacerAfter:*;">
                                    <label data="retailPrice" lineThrough="true" cssClass="retail" />
                                    <spacer size="10" />
                                    <label data="price" cssClass="salePrice" />
                                </hbox>
                            </hbox>
                        </default>
                    </switchbox>
                </vbox>
            </case>
            <case name="right">
                <vbox css="direction:rtl">
                    <clippedparagraph2 pack="top" id="outOfStockTitle" value="{if(String.isEmpty($outOfStockMsg),'@ECOM_GALLERY_OUT_OF_STOCK_TEXT@',$outOfStockMsg)}" max-chars="150"
                                      layout="text-align:right" hidden="{not(and($hover, outOfStock, $expOutOfStockOpen))}" cssClass="txtHoverColorOutOfStock"/>
                    <clippedparagraph2 pack="top" id="desc" data="title" max-chars="150"
                                      layout="text-align:right"  hidden="{and(outOfStock, $expOutOfStockOpen, $hover)}" cssClass="txtHoverColor"/>
                    <switchbox id="retailPriceSwitch" data="retailPrice" cssClass="txtHoverColor">
                        <case name="&lt;br/&gt;">
                            <hbox css="text-align:right">
                                <label id="text" data="price" cssClass="price" layout="spacerBefore:0;spacerAfter:*;" />
                            </hbox>
                        </case>
                        <default>
                            <hbox>
                                <hbox layout="spacerBefore:0;spacerAfter:*;text-align:right">
                                    <label data="retailPrice" lineThrough="true" cssClass="retail" />
                                    <spacer size="10" />
                                    <label data="price" cssClass="salePrice" />
                                </hbox>
                            </hbox>
                        </default>
                    </switchbox>
                </vbox>
            </case>
        </switchbox>
        <customizations>
<!--
            <textfield priority="20" fieldId="vars" key="outOfStockMsg" format="*" label="@ECOM_GALLERY_OUT_OF_STOCK_LABEL@" maxLength="30"/>
-->
        </customizations>
    </view>

