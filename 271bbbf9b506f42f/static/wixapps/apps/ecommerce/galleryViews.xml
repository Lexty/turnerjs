    <!-- Ribbon -->
    <view for-type="ProductBundle" name="DefaultRibbon|SimpleCleanRibbon|PolaroidRibbon">
        <vbox pack="start" css="position:absolute; width:100%; height:100%;">
            <box id="ribbonSpacer" layout="height:60%"/>
            <switchbox id="ribbonAlignment" data="$alignment" css="width:100%;">
                <case name="left">
                    <hbox>
                        <hbox layout="spacerAfter:*">
                            <vbox id="ribbon" cssClass="ribbon" layout="">
                                <hbox id="pad" layout="spacer:10; box-flex:1;">
                                    <spacer size="5" />
                                    <vbox id="pad" layout="spacer:10;" box-align="center">
                                        <label data="ribbon"/>
                                    </vbox>
                                    <spacer size="5" />
                                </hbox>
                            </vbox>
                        </hbox>
                    </hbox>
                </case>
                <case name="center">
                    <vbox id="ribbon" cssClass="ribbon">
                        <hbox>
                            <vbox layout="spacerBefore:*; spacerAfter:*;">
                                <hbox id="pad" layout="spacer:10; box-flex:1;">
                                    <vbox id="pad" layout="spacer:10;" box-align="center">
                                        <label data="ribbon"/>
                                    </vbox>
                                </hbox>
                            </vbox>
                        </hbox>
                    </vbox>
                </case>
                <default>
                    <hbox>
                        <hbox layout="spacerBefore:*">
                            <vbox id="ribbon" cssClass="ribbon" layout="">
                                <hbox id="pad" layout="spacer:10; box-flex:1;">
                                    <spacer size="5" />
                                    <vbox id="pad" layout="spacer:10;" box-align="center">
                                        <label data="ribbon"/>
                                    </vbox>
                                    <spacer size="5" />
                                </hbox>
                            </vbox>
                        </hbox>
                    </hbox>
                </default>
            </switchbox>
        </vbox>

        <customizations>
            <slider label="@ECOM_GALLERY_RIBBON_VERTICAL_POSITION_PANEL@" priority="60" fieldId="ribbonSpacer" key="layout.height" minVal="0" maxVal="90" unit="%"/>
            <slider label="@ECOM_GALLERY_RIBBON_PADDING_PANEL@" priority="60" fieldId="pad" key="layout.spacer" minVal="0" maxVal="30" />
        </customizations>
    </view>

    <view for-type="ProductBundle" name="Default" vars="alignment:right;text-alignment:left;hover:false">
        <zoomlink idField="id" titleField="title" listExpression="parent.parent.items" hoverVar="hover">
            <hbox id="itemPad" layout="box-flex:1; width:100%; spacer:7;">
                <vbox id="itemPad" cssClass="vBOX" layout="box-flex:1; spacer:0;">
                    <!-- Top side: picture, ribbon, rollover line -->
                    <stack layout="box-flex:1;" stackType="layout">
                        <vbox css="left:0; right:0; top:0; bottom:0;">
                            <image data="currentImage" imageMode="full" layout="width:100%; height:100%; box-flex:1" cssClass="pic"/>
                            <box id="rolloverStrip" cssClass="rolloverStrip" layout="width:100%; height:3px; margin-top:3px"/>
                        </vbox>
                        <switchbox id="ribbonSwitch" data="ribbon"
                                css="position:absolute; width:100%; height:100%;" cssClass="switchDIV"
                                >
                            <case name=""/>
                            <default>
                                <switchbox data="$viewName">
                                    <case name="Default"><use view="DefaultRibbon"/></case>
                                    <case name="SimpleClean"><use view="SimpleCleanRibbon"/></case>
                                    <case name="Polaroid"><use view="PolaroidRibbon"/></case>
                                </switchbox>
                            </default>
                        </switchbox>
                    </stack>
                    <spacer size="12"/>

                    <!-- Bottom side: text (description, prices)-->
                    <switchbox value="defaultLayout" id="textLayout"
                            layout="margin-left:2; margin-right:2;" cssClass="txtHoverColor">
                        <case name="altLayout">
                            <switchbox data="$viewName">
                                <case name="Default"><use view="Default_AltTxtLayout"/></case>
                                <case name="SimpleClean"><use view="SimpleClean_AltTxtLayout"/></case>
                                <case name="Polaroid"><use view="Polaroid_AltTxtLayout"/></case>
                            </switchbox>
                        </case>
                        <default>
                            <switchbox data="$viewName">
                                <case name="Default"><use view="Default_DefTxtLayout"/></case>
                                <case name="SimpleClean"><use view="SimpleClean_DefTxtLayout"/></case>
                                <case name="Polaroid"><use view="Polaroid_DefTxtLayout"/></case>
                            </switchbox>
                        </default>
                    </switchbox>
                    <spacer size="10"/>
                </vbox>
            </hbox>
        </zoomlink>

        <customizations>
            <slider label="@ECOM_GALLERY_ITEM_PADDING_PANEL@" priority="60" fieldId="itemPad" key="layout.spacer" minVal="0" maxVal="20"/>
            <radioimages label="@ECOM_GALLERY_RIBBON_ALIGNMENT_PANEL@" fieldId="vars" key="alignment" priority="95">
                <option value="left" image="radiobuttons/radio_button_states.png" width="35px" height="33px"
                        icon="radiobuttons/alignment/left.png"/>
                <option value="center" image="radiobuttons/radio_button_states.png" width="35px" height="33px"
                        icon="radiobuttons/alignment/center.png"/>
                <option value="right" image="radiobuttons/radio_button_states.png" width="35px" height="33px"
                        icon="radiobuttons/alignment/right.png"/>
            </radioimages>
            <checkbox label="@ECOM_GALLERY_HORIZ_LINE_ON_ROLLOVER_PANEL@" fieldId="rolloverStrip" key="hidden" trueVal="false"
                      falseVal="true" defaultVal="false" priority="50"/>
            <radioimages label="@ECOM_GALLERY_TEXT_LAYOUT_PANEL@" fieldId="textLayout" key="value" priority="45">
                <option value="defaultLayout" image="radiobuttons/radio_button_states.png" width="35px" height="33px"
                        icon="radiobuttons/alignment/left.png"/>
                <option value="altLayout" image="radiobuttons/radio_button_states.png" width="35px" height="33px"
                        icon="radiobuttons/alignment/center.png"/>
            </radioimages>
            <radioimages label="@ECOM_ALIGNMENT_LABEL_PANEL@" fieldId="vars" key="text-alignment" priority="95">
                <option value="left" image="radiobuttons/radio_button_states.png" width="35px" height="33px"
                        icon="radiobuttons/alignment/left.png"/>
                <option value="center" image="radiobuttons/radio_button_states.png" width="35px" height="33px"
                        icon="radiobuttons/alignment/center.png"/>
                <option value="right" image="radiobuttons/radio_button_states.png" width="35px" height="33px"
                        icon="radiobuttons/alignment/right.png"/>
            </radioimages>

        </customizations>
    </view>


