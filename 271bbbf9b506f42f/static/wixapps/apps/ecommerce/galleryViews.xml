    <!-- ################## Pics Only Gallery ################## -->

    <view for-type="ProductBundle" name="PicsOnlyMouseOver"  vars="outOfStockMsg:'@ECOM_GALLERY_OUT_OF_STOCK_TEXT@';alignment:left;hover:true;editable:{eq($showHoverOnEdit,'true')}">
        <zoomlink idField="id" titleField="title" listExpression="parent.parent.parent.items" css="height:100%">
            <hbox layout="box-flex:1;">
                <vbox layout="spacer:20;box-flex:1">
                    <spacer size="20" id="hoverSpacerTop"/>
                    <clippedparagraph2 value="{if(String.isEmpty($outOfStockMsg),'@ECOM_GALLERY_OUT_OF_STOCK_TEXT@',$outOfStockMsg)}" hidden="{not(and($hover, outOfStock, $expOutOfStockOpen))}"
                                       max-chars="150" style="Heading S" isStyleEditable="{$editable}" layout="text-align:{$alignment}" cssClass="txtHoverColorOutOfStock"/>
                    <clippedparagraph2 data="title" max-chars="150" style="Heading S" isStyleEditable="{$editable}"
                                      layout="text-align:{$alignment}" hidden="{and($hover, outOfStock, $expOutOfStockOpen)}"/>
                    <hline id="ttlDescDivider" layout="spacer:10" style="hl1" isStyleEditable="{$editable}"/>
                    <vbox hidden="{eq(details, '')}" layout="width:100%">
                        <clippedparagraph2 id="showDetails" data="details" style="Body M" max-chars="150" isStyleEditable="{$editable}"
                                          layout="text-align:{$alignment}"/>
                        <spacer id="showDetails" size="20"/>
                    </vbox>
                    <label id="readMoreLabel" value="@ECOM_GALLERY_READ_MORE_TEXT@" bold="true" layout="text-align:{$alignment}" isStyleEditable="{$editable}"/>
                    <spacer id="hoverOverviewPriceSpacer" size="10"/>
                    <switchbox id="retailPriceSwitch" data="retailPrice">
                        <case name="&lt;br/&gt;">
                            <vbox>
                                <label data="price" cssClass="price" style="Heading S" isStyleEditable="{$editable}"
                                       layout="text-align:{$alignment}"/>
                            </vbox>
                        </case>
                        <default>
                            <vbox box-align="{String.replace($alignment,'middle','center')}" layout="text-align:{$alignment}">
                                <hbox box-align="baseline">
                                    <label data="price" style="Heading S" cssClass="salePrice" isStyleEditable="{$editable}"/>
                                    <spacer size="10"/>
                                    <label data="retailPrice" style="Body L" lineThrough="true" cssClass="retail" isStyleEditable="{$editable}"/>
                                </hbox>
                            </vbox>
                        </default>
                    </switchbox>
                    <spacer id="hoverSpacerBottom" size="20"/>
                </vbox>
            </hbox>
        </zoomlink>
        <customizations>
            <textfield priority="88" fieldId="readMoreLabel" key="value" label="@ECOM_GALLERY_READ_MORE_TEXT@" maxLength="40"/>
            <checkbox priority="85" key="hidden" fieldId="ttlDescDivider" label="@ECOM_GALLERY_LINE_SEPARATOR_PANEL@"
                      defaultVal="false" trueVal="false" falseVal="true" spaceAfter="10"/>
            <!--<checkbox key="hidden" fieldId="showDetails" label="@ECOM_GALLERY_LINE_SEPARATOR_PANEL@" defaultVal="false" trueVal="false" falseVal="true" spaceAfter="10"/>-->
            <checkbox priority="87" label="@ECOM_ZOOM_GALLERY_LEFT_DISPLAY_DETAILS@" fieldId="showDetails" key="hidden" trueVal="false" falseVal="true" defaultVal="false" spaceAfter="10"/>
            <radioimages priority="84" label="@ECOM_GALLERY_TEXT_ALIGNMENT_PANEL@" fieldId="vars" key="alignment" >
                <option value="left" image="radiobuttons/radio_button_states.png" width="35px" height="33px"
                        icon="radiobuttons/alignment/left.png"/>
                <option value="center" image="radiobuttons/radio_button_states.png" width="35px" height="33px"
                        icon="radiobuttons/alignment/center.png"/>
                <option value="right" image="radiobuttons/radio_button_states.png" width="35px" height="33px"
                        icon="radiobuttons/alignment/right.png"/>
            </radioimages>
            <slider priority="83" fieldId="hoverSpacerTop" key="size" label="@ECOM_GALLERY_TITLE_MARGIN_TOP_PANEL@" minVal="0" maxVal="30"/>
            <slider priority="82" fieldId="hoverOverviewPriceSpacer" key="size" label="@ECOM_GALLERY_OVERVIEW_AND_PRICE_SPACER_PANEL@" minVal="0" maxVal="30"/>
        </customizations>
    </view>

    <view  for-type="ProductBundle" name="PicsOnlyNoHover"  vars="ribbonMargin:20;ribbonTop:10%;ribbonAlign:left;alignment:right;text-alignment:left;hover:false;editable:{eq($showHoverOnEdit,'false')}">
        <zoomlink idField="id" titleField="title" listExpression="parent.parent.parent.items" css="height:100%">
            <box layout="position:relative;height:100%;width:100%">
                <box layout="position:absolute;width:100%;height:100%">
                    <image data="currentImage" imageMode="full" layout="height:100%;width:100%" isStyleEditable="{$editable}" cssClass="pic" style="wp2"/>
                </box>
                <box layout="position:absolute;min-height:40;top:{$ribbonTop};left:{if(eq($ribbonAlign,'right'),'auto',0)};right:{if(eq($ribbonAlign,'left'),'auto',0)}"
                     hidden="{eq(ribbon, '')}">
                    <area layout="min-height:40;padding-left:{$ribbonMargin};padding-right:{$ribbonMargin};text-align:center" style="c1" isStyleEditable="{$editable}">
                        <spacer size="12"/>
                        <label data="ribbon" isStyleEditable="{$editable}"/>
                        <spacer size="12"/>
                    </area>

                </box>
            </box>
        </zoomlink>
        <customizations>
            <slider label="@ECOM_GALLERY_RIBBON_VERTICAL_POSITION_PANEL@" priority="95" fieldId="vars"
                    key="ribbonTop" minVal="0" maxVal="85" unit="%"/>
            <slider label="@ECOM_GALLERY_RIBBON_PADDING_PANEL@" priority="94" fieldId="vars" key="ribbonMargin"
                    minVal="0" maxVal="75"/>
            <radioimages priority="93" fieldId="vars" key="ribbonAlign" label="@ECOM_GALLERY_RIBBON_ALIGNMENT_PANEL@" format="*">
                <option value="left" image="radiobuttons/radio_button_states.png" width="35px" height="33px" icon="radiobuttons/alignment/left.png" />
                <option value="center" image="radiobuttons/radio_button_states.png" width="35px" height="33px" icon="radiobuttons/alignment/center.png" />
                <option value="right" image="radiobuttons/radio_button_states.png" width="35px" height="33px" icon="radiobuttons/alignment/right.png" />
            </radioimages>
            <combobox fieldId="currentImage" key="imageMode" label="@ECOM_IMAGE_MODE_PANEL@" priority="96">
                <option label="@ECOM_IMAGE_MODE_CROP_PANEL@" value="fill"/>
                <option label="@ECOM_IMAGE_MODE_CENTER_PANEL@" value="full"/>
            </combobox>
        </customizations>
    </view>

    <view for-type="ItemsList" name="PicsOnly" vars="isViewCustomizing:false; alignment:right; text-alignment:left; hover:false">
        <switchbox data="emptyGalleryLabel">
            <case name="">
                <gallery data="items" id="hoverGallery" columns="4" rows="2" gap="20" autoplay="false"
                         expandEnabled="false" hoverVar="hover"
                         styleNS="hoverGallery" layout="box-flex:1;width:100%" transition="horizSwipeAllAtOnce"/>
            </case>
            <default>
                <label data="emptyGalleryLabel"/>
            </default>
        </switchbox>
        <customizations>
            <slider fieldId="hoverGallery" priority="99" key="rows" label="@ECOM_GALLERY_ROWS_LABEL_PANEL@" minVal="1" maxVal="10" updateOnDragEnd="true"/>
            <slider fieldId="hoverGallery" priority="98" key="columns" label="@ECOM_GALLERY_COLUMNS_LABEL_PANEL@" minVal="1" maxVal="10" updateOnDragEnd="true"/>
            <slider fieldId="hoverGallery" priority="86" key="gap" label="@ECOM_GALLERY_CELLS_MARGINS_PANEL@" minVal="0" maxVal="200"/>
            <changestyle label="@ECOM_GALLERY_CHANGE_COLORS_PANEL@" fieldId="hoverGallery" priority="97" key="style" showAs="button" spaceAfter="20"/>
        </customizations>
    </view>

    <view for-type="ProductBundle" name="PicsOnly" vars="showHoverOnEdit:false; hover:false; showHover:{or($hover, and($isViewCustomizing, eq(String.concat('', $showHoverOnEdit), 'true')))}">
        <stylesheet>
            .expand { position:absolute; top:0; left:0; right:0; bottom:0; }
            .rollover, .rollover * { visibility:hidden !important; }
        </stylesheet>
        <vbox hoverVar="hover">
            <box layout="position:relative;box-flex:1">
                <box cssClass="expand">
                    <use view="PicsOnlyNoHover"/>
                </box>
                <box cssClass="{if($showHover, 'expand rolloverHolder', 'expand rolloverHolder rollover')}">
                    <use view="PicsOnlyMouseOver"/>
                </box>
            </box>
        </vbox>
        <customizations>
            <togglebutton priority="90" label="@ECOM_GALLERY_SHOW_HOVER_MODE_PANEL@" titleLabel="@ECOM_GALLERY_SHOW_HOVER_MODE_DESCRIPTION_PANEL@" fieldId="vars" key="showHoverOnEdit"
                          trueVal="true" falseVal="false" defaultVal="false" spaceAfter="15"/>
        </customizations>
    </view>


