            <case name="">
            </case>
            <default>
                <switchbox data="$alignment">
                    <case name="left">
                        <hbox>
                            <use view="{if($hover, 'RibbonBoxHover', 'RibbonBox')}" layout="spacerAfter:*"/>
                        </hbox>
                    </case>
                    <case name="center">
                        <hbox>
                            <use view="{if($hover, 'RibbonBoxHover', 'RibbonBox')}" layout="spacer:*"/>
                        </hbox>
                    </case>
                    <case name="right">
