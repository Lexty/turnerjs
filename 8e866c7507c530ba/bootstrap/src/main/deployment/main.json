    },


    {
        "id":                 "capturedHtmlScripts",
        "sourceDir":          "src/main/javascript",
        "package":            "bootstrap/bootstrap",
        "targetDir":          "javascript",
        "tags":               ["common"],
        "excludeFromManifest":true,
        "include":            [
            "capture/additionalScripts.js"

        ],
        "exclude":            ["**/~*"]
    },

    {
        "atPhase":  "PHASES.BOOTSTRAP",
        "id":       "libs",
        "sourceDir":"src/main",
        "targetDir":"",
        "package":  "libs",
        "tags":     ["common", "test"],
        "lint":     false,
        "include":  [
            "**/*.js"
        ],
        "exclude":  [
            "**/~*",
            "preload_scripts.js",
            "mootools-more.js",
            "modernizr-extensions.js",
            "mousetrap-extras.js",
            "lodash-settings.js"
        ]
    },
    {
        "atPhase":  "PHASES.LIBS",
        "id":       "libsExtentions",
        "sourceDir":"src/main",
        "targetDir":"",
        "package":  "libs",
        "tags":     ["common", "test"],
        "include":  [
            "../javascript/bootstrap/extendnative/*.js",
            "mootools-more.js",
            "modernizr-extensions.js",
            "mousetrap-extras.js",
            "lodash-settings.js"
        ],
        "exclude":  [
            "preload_scripts.js",
            "**/~*"
        ]
    },
    {
        "atPhase":  "PHASES.CLASSMANAGER",
        "id":       "basics",
        "sourceDir":"src/main/javascript",
        "targetDir":"javascript",
        "package":  "bootstrap",
        "tags":     ["common", "test"],
        "include":  [
            "managers/**/*.js",
            "utils/**/*.js"
        ],
        "exclude":  [
            "**/~*"
        ]
    },
    {
        "atPhase":            "immediate",
        "id":                 "deployment#main",
        "tags":               ["common", "test"],
        "sourceDir":          "src/main",
        "targetDir":          "",
        "package":            "deployment",
        "include":            [
            "main.js",
            "../javascript/bootstrap/*.js"
        ],
        "exclude":            [
        ]
    },
    {
        "id":                 "loadInitialScriptsDynamically",
        "tags":               ["not-loaded"],
        "sourceDir":          "src/main",
        "targetDir":          "",
        "package":            "deployment",
        "include":            [
            "loadInitialScriptsDynamically.js"
        ],
        "exclude":            [
        ]
    },
    {
        "atPhase":  "PHASES.POST_DEPLOY",
        "id":       "preload_scripts",
        "sourceDir":"src/main",
        "targetDir":"",
        "package":  "libs",
        "tags":     ["dontload"],
        "include":  [
            "preload_scripts.js"
        ],
        "exclude":["**/~*"]
    },
    {
        "id":"tests",
        "sourceDir":"src/test",
        "package":"",
        "targetDir":"test",
        "tags":["dontload"],
        "lint":false,
        "min": false,
        "include":[
            "**/*.js"
        ],
        "exclude":[
            "**/~*.js"
        ]
    }
]


