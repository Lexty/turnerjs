<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.wixpress.html-client</groupId>
    <artifactId>web</artifactId>
    <version>2.768.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Web Wysiwyg Editor</name>

    <parent>
        <groupId>com.wixpress.common</groupId>
        <artifactId>html-client-common-parent</artifactId>
        <version>100.0.0-SNAPSHOT</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>com.wixpress.html-client</groupId>
            <artifactId>core</artifactId>
            <type>tar.gz</type>
            <version>2.768.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.wixpress.html-client</groupId>
            <artifactId>tpa</artifactId>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.wixpress.html-client</groupId>
            <artifactId>bootstrap</artifactId>
            <type>tar.gz</type>
            <version>2.768.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.wixpress.html-client</groupId>
            <artifactId>skins</artifactId>
            <type>tar.gz</type>
            <version>2.768.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.wixpress.html-client</groupId>
            <artifactId>ck-editor</artifactId>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.wixpress.common</groupId>
            <artifactId>html-test-framework</artifactId>
	    <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.wixpress.html-client</groupId>
            <artifactId>langs</artifactId>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>Windows NodeJs</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <properties>
                <npm>${env.NODE_HOME}\npm.cmd</npm>
                <node>${env.NODE_HOME}\node</node>
            </properties>
        </profile>
        <profile>
            <id>Unix NodeJs</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <properties>
                <npm>${env.NODE_HOME}/npm</npm>
                <node>${env.NODE_HOME}/node</node>
            </properties>
        </profile>
        <profile>
            <id>buildmachine</id>
            <build>
                <plugins>
                    <!--setup dependent folder sources-->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.11</version>
                        <configuration>
                            <systemPropertyVariables>
                                <testicle.baseDir>target</testicle.baseDir>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>

                    <!--Unpacking dependencies-->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.8</version>
                        <executions>
                            <execution>
                                <id>unpack tpa for buildmachine testing</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.wixpress.html-client</groupId>
                                            <artifactId>tpa</artifactId>
                                            <type>tar.gz</type>
                                            <outputDirectory>${project.build.directory}/tpa-client/src/main
                                            </outputDirectory>
                                            <includes>*.*</includes>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <execution>
                                <id>unpack core for buildmachine testing</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.wixpress.html-client</groupId>
                                            <artifactId>core</artifactId>
                                            <type>tar.gz</type>
                                            <outputDirectory>${project.build.directory}/html-client/core/src/main
                                            </outputDirectory>
                                            <includes>*.*</includes>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <execution>
                                <id>unpack bootstrap for buildmachine testing</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.wixpress.html-client</groupId>
                                            <artifactId>bootstrap</artifactId>
                                            <type>tar.gz</type>
                                            <outputDirectory>${project.build.directory}/html-client/bootstrap/src/main
                                            </outputDirectory>
                                            <includes>*.*</includes>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <execution>
                                <id>unpack skins for buildmachine testing</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.wixpress.html-client</groupId>
                                            <artifactId>skins</artifactId>
                                            <type>tar.gz</type>
                                            <outputDirectory>${project.build.directory}/html-client/skins/src/main
                                            </outputDirectory>
                                            <includes>*.*</includes>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <execution>
                                <id>unpack langs for buildmachine testing</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.wixpress.html-client</groupId>
                                            <artifactId>langs</artifactId>
                                            <type>tar.gz</type>
                                            <outputDirectory>${project.build.directory}/html-client/langs/src/main
                                            </outputDirectory>
                                            <includes>*.*</includes>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <execution>
                                <id>unpack html-test-framework for buildmachine testing</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.wixpress.common</groupId>
                                            <artifactId>html-test-framework</artifactId>
                                            <type>tar.gz</type>
                                            <outputDirectory>${project.build.directory}/html-client/html-test-framework/src/main
                                            </outputDirectory>
                                            <includes>*.*</includes>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>deploy-snapshot</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>unpack</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>junit</groupId>
                                            <artifactId>junit</artifactId>
                                            <version>3.8.1</version>
                                            <type>jar</type>
                                            <overWrite>false</overWrite>
                                            <outputDirectory>${project.build.directory}/alternateLocation</outputDirectory>
                                            <destFileName>optional-new-name.jar</destFileName>
                                            <includes>**/*.class,**/*.xml</includes>
                                            <excludes>**/*test.class</excludes>
                                        </artifactItem>
                                    </artifactItems>
                                    <includes>**/*.java</includes>
                                    <excludes>**/*.properties</excludes>
                                    <outputDirectory>${project.build.directory}/wars</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>publish</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>define-classpath</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <exportAntProperties>true</exportAntProperties>
                                    <target>
                                        <property name="maven.classpath" refid="maven.plugin.classpath"/>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>scp</id>
                                <phase>install</phase>
                                <configuration>
                                    <tasks>
                                        <property name="compile_classpath" refid="maven.compile.classpath"/>
                                        <property name="runtime_classpath" refid="maven.runtime.classpath"/>
                                        <property name="test_classpath" refid="maven.test.classpath"/>
                                        <property name="plugin_classpath" refid="maven.plugin.classpath"/>
                                        <!--<property name="compile_classpath" value="${maven.compile.classpath}"/>-->
                                        <!--<property name="runtime_classpath" value="${maven.runtime.classpath}"/>-->
                                        <!--<property name="test_classpath" value="${maven.test.classpath}"/>-->
                                        <!--<property name="plugin_classpath" value="${maven.plugin.classpath}"/>-->

                                        <echo message="compile classpath: ${compile_classpath}"/>
                                        <echo message="runtime classpath: ${runtime_classpath}"/>
                                        <echo message="test classpath:    ${test_classpath}"/>
                                        <echo message="plugin classpath:  ${plugin_classpath}"/>
                                        <!--<scp action="send"-->
                                        <!--server="${ftp.host}" remotedir="${ftp.remotedir}"-->
                                        <!--userid="${ftp.userid}" password="${ftp.password}"-->
                                        <!--depends="${ftp.depends}" verbose="${ftp.verbose}">-->
                                        <!--<fileset dir="${project.build.directory}">-->
                                        <!--<include-->
                                        <!--name="${project.build.finalName}.${project.packaging}"/>-->
                                        <!--</fileset>-->
                                        <!--</scp>-->
                                        <path id="jsch-classpath">
                                            <!--<fileset dir="/usr/local/apache-ant/apache-ant-1.8.4/lib/" includes="ant-jsch.jar"/>-->
                                            <fileset includes="${plugin_classpath}"/>
                                        </path>
                                        <!--<taskdef name="scp" classname="org.apache.tools.ant.taskdefs.optional.ssh.Scp" classpathref="jsch-classpath" />-->
                                        <scp file="/Users/idok/Projects/html-client/web/build.xml"
                                             todir="wix@0qp0.com:/home/wix/html-client/web"
                                             keyfile="${user.home}/.ssh/id_rsa"/>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>com.jcraft</groupId>
                                <artifactId>jsch</artifactId>
                                <version>0.1.50</version>
                            </dependency>
                            <dependency>
                                <groupId>commons-net</groupId>
                                <artifactId>commons-net</artifactId>
                                <version>1.4.1</version>
                            </dependency>
                            <dependency>
                                <groupId>ant</groupId>
                                <artifactId>ant-commons-net</artifactId>
                                <version>1.6.5</version>
                            </dependency>
                            <dependency>
                                <groupId>ant</groupId>
                                <artifactId>ant-nodeps</artifactId>
                                <version>1.6.5</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
            <properties>
                <scp.host>hostname</scp.host>
                <scp.remotedir>/opt/path/to/install</scp.remotedir>
                <scp.userid>user</scp.userid>
                <scp.password>mypassword</scp.password>
                <scp.depends>yes</scp.depends>
                <scp.verbose>no</scp.verbose>
            </properties>
        </profile>
    </profiles>

    <build>
        <plugins>
            <!-- avoid the maven jar - we only need a tar.gz -->
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-jar</id>
                        <phase>never</phase>
                        <configuration>
                            <finalName>unwanted</finalName>
                            <classifier>unwanted</classifier>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <executions>
                  <execution>
                    <id>copy-git-hooks</id>
                    <!-- here the phase you need -->
                    <phase>validate</phase>
                    <goals>
                      <goal>copy-resources</goal>
                    </goals>
                    <configuration>
                      <outputDirectory>${basedir}/../.git/hooks</outputDirectory>
                      <resources>
                        <resource>
                          <directory>${basedir}/../githooks</directory>
                          <include>pre-commit</include>
                        </resource>
                      </resources>
                    </configuration>
                  </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.8</version>
                <executions>
                    <execution>
                        <id>unpack node_modules</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <markersDirectory>${project.basedir}/../target</markersDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>wix.external</groupId><artifactId>grunt-common</artifactId><version>1.9.0</version>
                                    <type>tar.gz</type>
                                    <outputDirectory>${project.basedir}/..</outputDirectory>
                                    <includes>/node_modules</includes>
                                    <excludes>**/test*</excludes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!--Package assembly-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2.1</version>
                <configuration>
                    <descriptors>
                        <descriptor>maven/assembly/tar.gz.xml</descriptor>
                    </descriptors>
                    <appendAssemblyId>false</appendAssemblyId>
                    <finalName>${project.artifactId}-${pom.version}</finalName>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.11</version>
                <configuration>
                    <useFile>false</useFile>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.2.1</version>
                <executions>
                    <execution>
                        <id>run grunt</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <executable>${node}</executable>
                            <workingDirectory>${project.basedir}</workingDirectory>
                            <arguments>
                                <argument>${project.basedir}/../rungrunt.js</argument>
                                <argument>--no-color</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
    <properties>
        <com.wixpress.common_html-test-framework>1.28.0</com.wixpress.common_html-test-framework>
        <com.wixpress.html-client_langs>2.69.1</com.wixpress.html-client_langs>
    </properties>
</project>
